<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BnbnavNetClient.Controls"
        x:DataType="controls:InstructionDisplayControl"
        x:CompileBindings="True">
    <Design.PreviewWith>
        <controls:InstructionDisplayControl />
    </Design.PreviewWith>

    <Style Selector="controls|InstructionDisplayControl">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto *" RowDefinitions="Auto Auto">
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, Path=Instruction.TargetRoadName}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{TemplateBinding CalculatedInstructionLength}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
