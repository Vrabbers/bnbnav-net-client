<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:BnbnavNetClient.ViewModels"
             xmlns:c="clr-namespace:BnbnavNetClient.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BnbnavNetClient.Views.MainView"
             x:DataType="viewModels:MainViewModel"
             xmlns:views="clr-namespace:BnbnavNetClient.Views"
             xmlns:controls="using:BnbnavNetClient.Controls"
             x:CompileBindings="True"
             xmlns:str="using:BnbnavNetClient.I18Next"
             Loaded="ViewLoaded">

  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <viewModels:MainViewModel />
  </Design.DataContext>

  <Grid>
    <!-- Main UI -->
    <Grid RowDefinitions="* Auto Auto Auto">
      <!-- Map -->
      <ProgressBar IsIndeterminate="{Binding MapViewModel, Converter={x:Static ObjectConverters.IsNull}}" IsVisible="{Binding MapViewModel, Converter={x:Static ObjectConverters.IsNull}}" Width="0"/>
      <Panel Grid.Row="0" Name="MapPanel"/>
      <TextBlock Grid.Row="0" Text="{Binding MapViewModel.Test}"/>
      <ContentControl Grid.Row="0" Content="{Binding CornerViewModel}" Margin="12 12 12 12" Width="400" HorizontalAlignment="Left" />

      <!-- Edit Controls -->
      <Grid Grid.Row="2" IsVisible="{Binding EditModeEnabled}">
        <Grid ColumnDefinitions="Auto Auto Auto Auto Auto * Auto">
          <ToggleButton Grid.Column="0" Command="{Binding SelectModePressed}" Content="{str:Tr Key=SELECT}" IsChecked="{Binding IsInSelectMode}"/>
          <ToggleButton Grid.Column="1" Command="{Binding JoinModePressed}" Content="{str:Tr Key=JOIN}" IsChecked="{Binding IsInJoinMode}"/>
          <ToggleButton Grid.Column="2" Command="{Binding LandmarkPressed}" Content="{str:Tr Key=LANDMARK}" IsChecked="{Binding IsInLandmarkMode}"/>
          <ToggleButton Grid.Column="3" Command="{Binding NodeMovePressed}" Content="{str:Tr Key=MOVE_NODE}" IsChecked="{Binding IsInNodeMoveMode}"/>
          <ToggleButton Grid.Column="4" Command="{Binding SplicePressed}" Content="{str:Tr Key=SPLICE}" IsChecked="{Binding IsInSpliceMode}"/>
          <Button Grid.Column="6" IsVisible="{Binding EditModeEnabled}" Content="{str:Tr Key=SPY_OPTIONS}">
            <Button.Flyout>
              <Flyout>
                <Grid RowDefinitions="Auto Auto">
                  <CheckBox Content="{str:Tr Key=FOLLOW_ME_TURN_RESTRICTIONS}" IsChecked="{Binding HighlightTurnRestrictionsEnabled}" IsEnabled="False"/>
                  <CheckBox Grid.Row="1" Content="{str:Tr Key=FOLLOW_ME_INTERWORLD}" IsChecked="{Binding HighlightInterWorldNodesEnabled}"/>
                </Grid>
              </Flyout>
            </Button.Flyout>
          </Button>
        </Grid>
      </Grid>
      
      <!-- Main Bar -->
      <Grid Grid.Row="3" ColumnDefinitions="Auto Auto * Auto Auto Auto" IsVisible="{Binding MainBarVisible}">
        <Button Classes="icon" Command="{Binding LanguageButtonPressed}"><PathIcon Data="{StaticResource globe_regular}"/></Button>
        <ToggleButton Grid.Column="1" Command="{Binding EditModePressed}" Content="{str:Tr Key=EDIT_MODE}" IsChecked="{Binding EditModeEnabled}"/>
        <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PanText}"/>
        <ComboBox Grid.Column="3" HorizontalAlignment="Stretch" Margin="2" ItemsSource="{Binding AvailableWorlds, Mode=TwoWay}" SelectedItem="{Binding ChosenWorld, Mode=TwoWay}" IsEnabled="{Binding !FollowMeEnabled}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="UserControlButton" Grid.Column="4" IsVisible="{Binding HaveLoggedInUser}" Content="{Binding LoggedInUsername}">
          <Button.Flyout>
            <Flyout>
              <StackPanel>
                <ToggleButton Content="{str:Tr Key=FOLLOW_ME}" IsChecked="{Binding FollowMeEnabled}" />
                <Button Content="{str:Tr Key=LOG_OUT}" Command="{Binding LogoutPressed}" />
              </StackPanel>
            </Flyout>
          </Button.Flyout>
        </Button>
        <Button Grid.Column="4" Command="{Binding LoginPressed}" Content="{str:Tr Key=LOG_IN}" IsVisible="{Binding !HaveLoggedInUser}" />
        <controls:DayNightButton Grid.Column="5" Click="ColorModeSwitch" x:Name="DayNightButton"/>
      </Grid>
      <Grid.Styles>
        <Style Selector=":is(Button)">
          <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
      </Grid.Styles>
    </Grid>

    <!-- Popup -->
    <Grid IsVisible="{Binding Popup, Converter={x:Static ObjectConverters.IsNotNull}}" ColumnDefinitions="* 3* *" RowDefinitions="* Auto *" Background="#7f000000">
      <Border CornerRadius="3" Grid.Column="1" Grid.Row="1" BoxShadow="0 0 200 0 Black" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <UserControl Content="{Binding Popup}" MaxWidth="{Binding $parent[Grid].Bounds.Width}"/>
      </Border>
    </Grid>
  </Grid>
