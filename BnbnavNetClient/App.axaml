<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BnbnavNetClient"
             x:Class="BnbnavNetClient.App"
             >
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>
  <Application.Resources>
    <ResourceDictionary>  
      <ResourceDictionary.MergedDictionaries>
        <local:MapThemeResources Theme="Day"/>
        
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
  <Application.Styles>
    <FluentTheme Mode="Light"/>
    <Style Selector=":is(TemplatedControl)">
      <Setter Property="FontFamily" Value="/Assets/EuropaMittelschrift.ttf#Europa"/>
      <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style Selector=":is(Button)">
      <Setter Property="Margin" Value="2"/>
      <Setter Property="MinWidth" Value="72"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Margin" Value="2"/>
    </Style>
    <Style Selector="TextBlock">
      <Setter Property="Margin" Value="2"/>
    </Style>
    <StyleInclude Source="/Controls/DayNightButton.axaml"/>
  </Application.Styles>
</Application>
